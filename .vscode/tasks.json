// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean and Compile",
			"type": "shell",
			"problemMatcher": "$tsc-watch",
			"command": "rm -rf dist && npm i typescript@latest && tsc --watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
