{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"outDir": "out",
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"strict": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"],
			"@panels/*": ["panels/*"],
			"@services/*": ["services/*"],
			"@constants/*": ["constants/*"],
			"@type/*": ["types/*"],
			"@enums/*": ["enums/*"],
			"@utilities/*": ["utilities/*"],
			"@api/*": ["api/*"],
			"@providers/*": ["providers/*"]
		}
	},
	"include": ["./src"],
	"exclude": ["node_modules", ".vscode-test", "webview-ui"]
}
