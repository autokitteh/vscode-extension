{
	"compilerOptions": {
		"baseUrl": "src",
		"esModuleInterop": true,
		"lib": ["es2021", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"paths": {
			"@ak-proto-ts/*": ["autokitteh/proto/gen/ts/autokitteh/*"],
			"@api": ["api/index"],
			"@api/*": ["api/*"],
			"@constants": ["constants/index"],
			"@constants/*": ["constants/*"],
			"@controllers": ["controllers/index"],
			"@controllers/*": ["controllers/*"],
			"@enums": ["enums/index"],
			"@enums/*": ["enums/*"],
			"@models": ["models/index"],
			"@models/*": ["models/*"],
			"@i18n/*": ["i18n/*"],
			"@i18n": ["i18n/index"],
			"@interfaces": ["interfaces/index"],
			"@interfaces/*": ["interfaces/*"],
			"@providers": ["providers/index"],
			"@providers/*": ["providers/*"],
			"@services": ["services/index"],
			"@services/*": ["services/*"],
			"@starlark": ["starlark/index"],
			"@starlark/*": ["starlark/*"],
			"@type": ["types/index"],
			"@type/*": ["types/*"],
			"@tests": ["../tests/index"],
			"@tests/*": ["../tests/*"],
			"@utilities": ["utilities/index"],
			"@utilities/*": ["utilities/*"],
			"@views": ["views/index"],
			"@views/*": ["views/*"],
			"@vscommands": ["vscommands/index"],
			"@vscommands/*": ["vscommands/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2021"
	},
	"exclude": ["node_modules", ".vscode-test", "webview-ui", "./src/autokitteh"],
	"include": ["./src", "./tests/**/*.ts"]
}
