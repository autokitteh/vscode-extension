{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2021",
		"outDir": "out",
		"lib": ["es2021", "dom"],
		"sourceMap": true,
		"strict": true,
		"baseUrl": "src",
		"skipLibCheck": true,
		"paths": {
			"@panels/*": ["panels/*"],
			"@panels": ["panels/index"],
			"@services/*": ["services/*"],
			"@constants/*": ["constants/*"],
			"@vscommands/*": ["vscommands/*"],
			"@vscommands": ["vscommands/index"],
			"@type/*": ["types/*"],
			"@type": ["types/index"],
			"@enums/*": ["enums/*"],
			"@enums": ["enums/index"],
			"@utilities/*": ["utilities/*"],
			"@utilities": ["utilities/index"],
			"@api/*": ["api/*"],
			"@api": ["api/index"],
			"@providers/*": ["providers/*"],
			"@providers": ["providers/index"],
			"@controllers/*": ["controllers/*"],
			"@controllers": ["controllers/index"],
			"@ak-proto-ts/*": ["autokitteh/proto/gen/ts/autokitteh/*"]
		}
	},
	"include": ["./src"],
	"exclude": ["node_modules", ".vscode-test", "webview-ui", "./src/autokitteh"]
}
