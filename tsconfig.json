{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"outDir": "out",
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"strict": true,
		"baseUrl": "src",
		"paths": {
			"@panels/*": ["panels/*"],
			"@panels": ["panels/index"],
			"@services/*": ["services/*"],
			"@services": ["services/index"],
			"@constants/*": ["constants/*"],
			"@vscommands/*": ["vscommands/*"],
			"@vscommands": ["vscommands/index"],
			"@constants": ["constants/index"],
			"@type/*": ["types/*"],
			"@type": ["types/index"],
			"@enums/*": ["enums/*"],
			"@enums": ["enums/index"],
			"@utilities/*": ["utilities/*"],
			"@utilities": ["utilities/index"],
			"@api/*": ["api/*"],
			"@api": ["api/index"],
			"@providers/*": ["providers/*"],
			"@providers": ["providers/index"]
		}
	},
	"include": ["./src"],
	"exclude": ["node_modules", ".vscode-test", "webview-ui"]
}
